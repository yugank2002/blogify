<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>BlogiFY - Home</title>
    <style>
        /* Styles specific to the homepage's content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            box-sizing: border-box;
            flex-grow: 1;
        }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
        }

        h1, h2 {
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 30px;
        }

        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
        }

        .blog-card {
            /* Changed background to a soft off-white */
            background-color: #fcfcfc; /* A very subtle off-white */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .blog-card-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            display: block;
        }

        .blog-card-content {
            /* Reduced padding to minimize white space */
            padding: 12px 15px; /* Slightly more horizontal padding than vertical */
            flex-grow: 1;
            position: relative;
            z-index: 1;
        }

        .blog-card-content h3 {
            margin-top: 0;
            color: var(--primary-color);
            font-size: 1.3rem;
            margin-bottom: 6px; /* Reduced margin */
            height: 1.8rem;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            
            -webkit-box-orient: vertical;
        }

        .blog-card-meta {
            font-size: 0.85rem;
            color: #777;
            margin-top: 0; /* Removed top margin, relies on h3 bottom margin */
        }

        .blog-card-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--overlay-color);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
            border-radius: 10px;
        }

        .blog-card:hover .blog-card-overlay {
            opacity: 1;
            pointer-events: auto;
        }

        .blog-card-overlay .blog-title-overlay {
            color: var(--text-light);
            font-size: 1.4rem;
            font-weight: 700;
            text-align: center;
            padding: 0 15px;
            margin-bottom: 20px;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
        }

        .blog-card-link-overlay {
            background-color: var(--accent-color);
            color: var(--text-light);
            padding: 12px 25px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.05rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .blog-card-link-overlay:hover {
            background-color: #0097a7;
            transform: scale(1.05);
        }

        /* Responsive adjustments for Homepage content */
        @media (max-width: 768px) {
            .blog-grid {
                grid-template-columns: 1fr;
            }
            .blog-card-image {
                height: 200px;
            }
            .blog-card-overlay .blog-title-overlay {
                font-size: 1.2rem;
            }
            .blog-card-link-overlay {
                font-size: 1rem;
                padding: 10px 20px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="main-content-wrapper">
        <div class="container">
            <% if (locals.error) { %>
                <div class="alert">
                    <%= error %>
                </div>
            <% } %>

            <% if (locals.user) { %>
                <h1>Welcome, <%= user.fullName %>!</h1>
            <% } else { %>
                <h1>Welcome to BlogiFY!</h1>
            <% } %>

            <h2>All Blogs</h2>

            <div class="blog-grid">
                <% if (blogs && blogs.length > 0) { %>
                    <% blogs.forEach(blog => { %>
                        <div class="blog-card" onclick="location.href='/blog/<%= blog._id %>';">
                            <img src="<%= blog.coverPhoto %>" alt="<%= blog.title %> Cover" class="blog-card-image">
                            <div class="blog-card-content">
                                <h3><%= blog.title %></h3>
                            </div>

                            <div class="blog-card-overlay">
                                <h4 class="blog-title-overlay"><%= blog.title %></h4>
                                <a href="/blog/<%= blog._id %>" class="blog-card-link-overlay">View Blog</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p style="text-align: center; grid-column: 1 / -1;">No blogs found. Be the first to add one!</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>